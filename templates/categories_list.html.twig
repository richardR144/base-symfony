{% extends 'base.html.twig' %}

{% block metatitle %}  Liste des catégories {% endblock metatitle %}

{% block main %}
    <section class="articles-container">

            <h3>Il y a {{ categories | length }} categories actuellement</h3>
            {% for category in categories %}

            <article class="articles-container" style="background-color:{{ category.color }}">
                <h2>{{ category.title }}</h2>
                <a href="{{ path('show_category', {id: category.id}) }}">Voir la catégorie</a>
            </article>
        {% endfor %}
    </section>
{% endblock main %}